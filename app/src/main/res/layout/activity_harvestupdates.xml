<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leflet"
    tools:context=".Harvestupdates">

  <RelativeLayout
      android:id="@+id/toplay"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      android:layout_marginTop="7dp"
      android:background="@drawable/tabrounded"
      android:gravity="center_vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_black_24"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/back"
        android:fontFamily="sans-serif"
        android:text="Updates"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold" />

  </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/toplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/textView23"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/fredericka_the_great"
          android:text="Notifications."
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="#000000"
          android:textSize="54sp"
          android:textStyle="bold" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="700dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:cardBackgroundColor="#C1FFFFFF"
          app:cardCornerRadius="21dp"
          app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

          <TextView
              android:id="@+id/textView29"
              android:layout_width="370dp"
              android:layout_height="65dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="serif"
              android:gravity="center_vertical"
              android:text="Harvest application still pending approval....."
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textColor="#000000"
              android:textStyle="italic" />

          <TextView
              android:id="@+id/textView28"
              android:layout_width="370dp"
              android:layout_height="65dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="serif"
              android:gravity="center_vertical"
              android:text="Harvest application still pending approval....."
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textColor="#000000"
              android:textStyle="italic" />

          <TextView
              android:id="@+id/textView27"
              android:layout_width="370dp"
              android:layout_height="65dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="serif"
              android:gravity="center_vertical"
              android:text="Harvest application still pending approval....."
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textColor="#000000"
              android:textStyle="italic" />

          <TextView
              android:id="@+id/textView26"
              android:layout_width="370dp"
              android:layout_height="65dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="serif"
              android:gravity="center_vertical"
              android:text="Harvest application still pending approval....."
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textColor="#000000"
              android:textStyle="italic" />

          <TextView
              android:id="@+id/textView25"
              android:layout_width="370dp"
              android:layout_height="65dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:fontFamily="serif"
              android:gravity="center_vertical"
              android:text="Harvest application still pending approval....."
              android:textAppearance="@style/TextAppearance.AppCompat.Body2"
              android:textColor="#000000"
              android:textStyle="italic" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>