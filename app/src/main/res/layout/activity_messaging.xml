<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morning"
    tools:context=".Messaging">

    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tabrounded"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_black_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/User_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backbtn"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_baseline_person_24"
            android:scaleType="fitXY"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/User_image"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Farmer test 17"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomlay"
        android:background="#25F8F7F7"
        android:layout_below="@+id/toplay"
        android:layout_margin="3dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottomlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp">


        <EditText
            android:id="@+id/enter_message"
            android:layout_width="match_parent"
            android:paddingLeft="14dp"
            android:layout_height="47dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="73dp"
            android:background="@drawable/rounded_corner"
            android:hint="Enter Message......."
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textColorHint="@color/black"
            android:drawableTint="@color/black"
            android:drawableLeft="@drawable/ic_baseline_mood_24"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_send_24"
            app:backgroundTint="@color/teal_700"
             />


    </RelativeLayout>
</RelativeLayout>